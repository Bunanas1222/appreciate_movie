page{
  background-color: #f1f1f1;
}
.header{
  width: 100%;
  height: 350rpx;
  /* background-color: rgb(237, 236, 232); */
}
.header .photo{
  display: flex;
  flex-direction: column;
  font-size:26rpx;
  color: grey;
}
.header .photo .image{
width: 200rpx;
height: 200rpx;
border: 2px rgb(212, 206, 206) solid;
border-radius:50%;
overflow: hidden;
}
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.center{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 个人列表样式 */
.list{
   width:100%;
   height: 90rpx;
   font-size: 30rpx;
    display: flex;
   align-items: center;  
   padding-left: 50rpx;
   box-shadow: 0 3rpx 0 #f1f1f1;
}

.bar{
  width: 100%;
  height: 20rpx;
  background-color: #f1f1f1;
}
.bg-white{
  background-color: #fff;
}
.space-between{
  width:85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 箭头样式 */
.jiantou{
  width:85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.jiantou::after{
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-top: 1rpx rgb(212, 206, 206) solid;
  border-right:1rpx rgb(212, 206, 206) solid; 
  transform:rotate(45deg);
}
