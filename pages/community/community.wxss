.today-container {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
}
.today-container .box{
  margin-bottom: 20rpx;
  border-bottom:2px #fcfcfc solid;
}
.title{
  display: flex;
  justify-content:  flex-start;
}
.title image{
  width: 50rpx;
  height: 50rpx;
}
.title text{
  padding-left: 20rpx;
  font-size: 24rpx;
}
.today-font {
  font-size: 26rpx;
  color: #999;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
.today-content {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin: 0 auto 10rpx;
  width: 100%;
}

.today-img {
  width: 400rpx;
  height: 220rpx;
}

.today-title {
  line-height: 1.5;
  font-weight: bold;
  width: 480rpx;
  margin: 30rpx 35rpx 20rpx;
  letter-spacing: 2rpx;
  max-height: 170rpx;
  overflow: hidden;
}
.box{
  border-bottom:2rpx solid #fcfcfc ;
}